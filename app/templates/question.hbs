<h2>{{model.author}} - "{{model.content}}"</h2>
{{question-update-form question=model}}
<p class="well">{{model.notes}}</p>
{{#if model.answers}}
  <h3>Answers:</h3>
{{/if}}
<ul class="list-group">
  {{#each model.answers as |answer|}}
    <li class="list-group-item">{{answer.content}} - {{answer.author}}</li>
  {{/each}}
</ul>
{{answer-form saveAnswer="saveAnswer" question=model}}
